// The mtx.json schema is documented on Confluence here:
// https://confluence.modernatx.net/display/AUGD/mtx-cli
// and the Compute Task model (with all possible variables and default values) is here:
// https://bitbucket.org/modernatx/compute/src/develop/server/src/models/Task.js
{
    "name": "inspectro",
    "image": {
        "namespace": "compsci"
    },
    "deployment": {
        "type": "compute",
        "environments": {
            "default": {
                "command": [
                    "echo",
                    "hello"
                ],
                "description": "None",
                "queueName": "compsci-spot",
                "synchronous": false,
                "execTimeout": 273000000,
                "tempVolumePath": "/data",
                "captureOutputFiles": true,
                "mtxAPIConsumerVolumePath": "/root/.mtx"
            },
            "test": {
                "forcePull": true,
                "envVars": [
                    {
                        "name": "MTX_ENVIRONMENT",
                        "value": "test"
                    },
                    {
                        "name": "MTX_USE_ENVIRONMENT_VARS",
                        "value": "true"
                    }
                ]
            },
            "prod": {
                "envVars": [
                    {
                        "name": "MTX_ENVIRONMENT",
                        "value": "prod"
                    },
                    {
                        "name": "MTX_USE_ENVIRONMENT_VARS",
                        "value": "true"
                    }
                ]
            }
        }
    }
}